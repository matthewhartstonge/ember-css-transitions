{
  "version": "4.3.2",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/miguelcobain/ember-css-transitions.git"
  },
  "workspaces": [
    "docs",
    "ember-css-transitions",
    "test-app"
  ],
  "scripts": {
    "build": "yarn workspace ember-css-transitions run build",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "prepare": "yarn build",
    "start": "concurrently 'npm:start:*' --restart-after 5000 --prefix-colors cyan,white,yellow",
    "start:addon": "yarn workspace ember-css-transitions run start",
    "start:test-app": "yarn workspace test-app run start",
    "test": "yarn workspaces run test"
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "^5.0.0",
    "@release-it-plugins/workspaces": "^3.2.0",
    "release-it": "^15.4.2"
  },
  "volta": {
    "node": "16.20.1",
    "yarn": "1.22.19"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "hooks": {
      "before:init": "cp README.md LICENSE.md ember-css-transitions/",
      "after:release": "cd docs && yarn deploy"
    },
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "@release-it-plugins/workspaces": {
        "workspaces": [
          "ember-css-transitions"
        ],
        "additionalManifests": {
          "dependencyUpdates": [
            "package.json",
            "docs/package.json",
            "test-app/package.json"
          ],
          "versionUpdates": [
            "package.json",
            "docs/package.json",
            "test-app/package.json"
          ]
        }
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  }
}
